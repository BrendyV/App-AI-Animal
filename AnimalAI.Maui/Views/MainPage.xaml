<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimalAI.Maui.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="DreamAnimal"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />



            <Border 
                Stroke="#FFC0C0C0"
                StrokeThickness="5"
                Background="black"
                Padding="16,8"
                HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="25,25,25,25" />
                </Border.StrokeShape>
                <Image
                    Source="start.jpeg"
                    SemanticProperties.Description="This animal is a big cat!"
                    HeightRequest="300"
                    HorizontalOptions="Center" />
            </Border>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
