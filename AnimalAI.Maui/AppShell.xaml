<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AnimalAI.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AnimalAI.Maui.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Icon="home_icon"/>

        <ShellContent
        Title="History"
        ContentTemplate="{DataTemplate views:HistoryPage}"
        Icon="history_icon"/>

        <ShellContent
            Title="Looking"
            ContentTemplate="{DataTemplate views:LookingPage}"
            Icon="research_icon"/>

        <ShellContent
            Title="Info"
            ContentTemplate="{DataTemplate views:InfoPage}"
            Icon="info_icon"/>

    </TabBar>
</Shell>
